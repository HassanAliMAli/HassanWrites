{
  "name": "hassan-writes",
  "version": "1.0.0",
  "private": true,
  "description": "A Medium-like blog built with Next.js and deployed on GitHub Pages",
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run build:scripts && npm run build:rss && npm run build:search",
    "build": "next build --webpack",
    "build:scripts": "tsc --project tsconfig.script.json",
    "build:rss": "node dist/generate-rss.js > public/rss.xml",
    "build:search": "node dist/generate-search-index.js",
    "start": "next start",
    "lint": "next lint",
    "analyze": "cross-env ANALYZE=true next build",
    "deploy": "npm run build && gh-pages -d out"
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "decap-cms-app": "^3.9.0",
    "flexsearch": "^0.8.212",
    "gray-matter": "^4.0.3",
    "marked": "^16.4.2",
    "next": "16.0.1",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-aria": "^3.44.0",
    "react-dom": "19.2.0",
    "react-stately": "^3.42.0",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.1",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/rss": "^0.0.32",
    "babel-plugin-react-compiler": "1.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
